<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <% if params[:plan] == '2' %>
      <h1 class="">Pro Account</h1>
                  <h4> Sign up for pro account for $10/month/year/person and get baller access to the community and contact information</h2>

    <% else %>
      <h1 class="text-center">Basic Account</h1>      
      <h4> Sign up for free and get basic access to our community</h4>

    <% end %>
  
    </div>
    <div class="col-md-6 col-md-offset-3">
      <div class="well">
        <h2>Sign up</h2>
        
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>
        
        <%= render "devise/shared/links" %>
      </div>
  </div>
</div>
